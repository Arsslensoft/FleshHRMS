<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,Log4net"/>
  </configSections>
  <log4net>
    <appender name="FileAppenderXml" type="log4net.Appender.FileAppender">
      <file type="log4net.Util.PatternString" value="Logs/%property{LogFileName}"/>
      <appendToFile value="true"/>
      <layout type="log4net.Layout.XmlLayoutSchemaLog4j">
        <locationInfo value="true"/>
      </layout>
      <param name="Encoding" value="utf-8"/>
    </appender>
    <!-- other appenders defined here -->

    <root>
      <level value="ALL"/>
      <appender-ref ref="FileAppenderXml"/>
      <!-- other appenders enabled here -->
    </root>
  </log4net>
  
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
  
</configuration>